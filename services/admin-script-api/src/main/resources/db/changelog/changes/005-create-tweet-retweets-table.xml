<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="005-create-tweet-retweets-table" author="geron">
        <createTable tableName="tweet_retweets">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tweet_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="comment" type="varchar(280)"/>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            baseTableName="tweet_retweets"
            baseColumnNames="tweet_id"
            constraintName="tweet_retweets_tweet_fk"
            referencedTableName="tweets"
            referencedColumnNames="id"/>

        <addForeignKeyConstraint
            baseTableName="tweet_retweets"
            baseColumnNames="user_id"
            constraintName="tweet_retweets_user_fk"
            referencedTableName="users"
            referencedColumnNames="id"/>

        <addUniqueConstraint
            tableName="tweet_retweets"
            columnNames="tweet_id, user_id"
            constraintName="uk_tweet_retweets_tweet_user"/>
    </changeSet>

</databaseChangeLog>